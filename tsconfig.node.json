{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "src/common/**/*"
  ],
  "exclude": [
    "**/__fixtures__/**"
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node", "node"],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/main/*"
      ],
      "@common/*": [
        "src/common/*"
      ],
    }
  }
}
